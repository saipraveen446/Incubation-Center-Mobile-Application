<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExploreFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppbar"
        app:title="Incubation"
        android:background="@color/white"
        app:titleTextColor="@color/violet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.appbar.MaterialToolbar>


    <TextView
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello,RGUKTN"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="25dp"

        />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:id="@+id/About_btn"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="38dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:background="@color/brown"
            android:padding="10dp">

            <TextView
                android:id="@+id/tt1"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="RGUKT"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:maxHeight="100dp"
                android:src="@drawable/rguktlogo" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/startup_btn"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:background="@color/blue"
                android:layout_marginTop="20dp"

                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/violet"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Startups"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="132dp"
                        android:layout_height="133dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/startup" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/project_button"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/orange"
                    android:padding="10dp"
                    >


                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Projects"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="123dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        android:src="@drawable/porejectmeet" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/research_area_btn"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/blue"
                        android:padding="10dp"
                        >

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="Mentors"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <ImageView

                            android:layout_width="149dp"
                            android:layout_height="127dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/research" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/event_btn"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pink"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="153dp"
                            android:layout_height="137dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"

                            android:src="@drawable/ideasss" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>